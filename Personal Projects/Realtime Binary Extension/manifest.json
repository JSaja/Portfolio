{
	"manifest_version": 2,

	"name": "Binary extension",
	"description": "This allows users to convert decimal numbers to binary in real-time",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	},

	"permissions": [
		"activeTab",
		"storage"
	],

	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}